{
  "name": "@stablepay/sdk_l2",
  "version": "0.0.26",
  "description": "Official StablePay SDK for Ethereum Layer 2",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=10.17.0"
  },
  "files": [
    "dist"
  ],
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "bili",
    "prepublishOnly": "npm run build",
    "coverage": "jest --coverage",
    "test": "NODE_ENV=test jest --verbose --silent=false",
    "test:dev": "NODE_ENV=test jest --watchAll",
    "prettier": "prettier  --write **/*.{ts,js}",
    "lint:ts": "npm run prettier && tslint -c tslint.json -t stylish --fix {src}/**/*.{ts}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StablePay/sdk_l2.git"
  },
  "author": "https://stablepay.io/about",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/StablePay/sdk_l2/issues"
  },
  "homepage": "https://github.com/StablePay/sdk_l2#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.4",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/bn.js": "^4.11.6",
    "@types/jest": "^26.0.4",
    "bili": "^5.0.5",
    "dotenv": "^8.2.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-mock-extended": "^1.0.9",
    "prettier": "^2.0.5",
    "rollup-plugin-typescript2": "^0.27.1",
    "semantic-release": "^17.0.4",
    "ts-jest": "^26.1.1",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "@types/object-hash": "^1.3.4",
    "ethers": "^5.0.0",
    "object-hash": "^2.1.1",
    "zksync": "^0.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:ts",
      "pre-push": "yarn test"
    }
  }
}
